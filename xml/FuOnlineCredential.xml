<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FuO Tools" Height="320" Width="400"
        WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize" Topmost="True"
        Background="#2D2D30" Foreground="White" FontFamily="Segoe UI">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="0,10,0,0">
            <TextBlock Text="FUOVERFLOW LOGIN" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#007ACC"/>
            <TextBlock Text="Vui lòng nhập thông tin đăng nhập" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,20"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="30,10,30,10" VerticalAlignment="Center">
            <Label Content="Tên đăng nhập (Username)" Foreground="Gray"/>
            <TextBox x:Name="UsernameTextBox" Height="28" Padding="5" FontSize="14" Background="#3E3E42" BorderBrush="#555" Foreground="White"/>
            
            <Label Content="Mật khẩu (Password)" Margin="0,15,0,0" Foreground="Gray"/>
            <PasswordBox x:Name="PasswordBox" Height="28" Padding="5" FontSize="14" Background="#3E3E42" BorderBrush="#555" Foreground="White"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button x:Name="LoginButton" Content="Đăng nhập" Width="100" Height="35" Margin="0,0,10,0" Background="#007ACC" Foreground="White" BorderThickness="0" FontSize="14"/>
            <Button x:Name="CancelButton" Content="Hủy bỏ" Width="100" Height="35" Background="#555" Foreground="White" BorderThickness="0" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
